<resources xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SchedJoules_Text_Medium"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SchedJoules_Text_Medium.Secondary">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="SchedJoules_Text_Small"
            parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="SchedJoules_Text_Very_Small"
            parent="SchedJoules_Text_Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SchedJoules_Text_Navigation"
            parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SchedJoules_Text_Navigation.Selected"
            parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Title"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Button"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Button.Secondary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Button.Stacked">
        <item name="android:gravity">right</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Button.Stacked.Secondary">
        <item name="android:textColor">#90000000</item>
    </style>

    <style name="SchedJoules_Text_CollapsingToolbar_ExpandedTitle"
            parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

</resources>

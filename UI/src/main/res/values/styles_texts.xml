<resources xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SchedJoules_Text_Medium"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SchedJoules_Text_Medium.Secondary">
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="SchedJoules_Text_Small"
            parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
    </style>

    <style name="SchedJoules_Text_Very_Small"
            parent="SchedJoules_Text_Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SchedJoules_Text_Navigation"
            parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SchedJoules_Text_Navigation.Selected">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SchedJoules_Text_Dialog_Title"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_default
        </item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SchedJoules_Dialog_Button_Stacked"
            parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:gravity">right</item>
    </style>

    <style name="SchedJoules_Text_CollapsingToolbar_ExpandedTitle"
            parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="SchedJoules_SectionHeader_Title"
            parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily"
                tools:targetApi="jelly_bean">@string/schedjoules_font_medium
        </item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:gravity">center_vertical|start|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
